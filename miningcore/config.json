{
  "logging": {
    "level": "Info",
    "enableConsoleLog": true,
    "enableConsoleColors": true
  },
  "banning": {
    "manager": "Integrated",
    "banOnJunkReceive": true,
    "banOnInvalidShares": false
  },
  "notifications": {
    "enabled": false
  },
  "persistence": {
    "postgres": {
      "host": "postgres",
      "port": 5432,
      "user": "miningcore",
      "password": "replace-with-strong-password",
      "database": "miningcore"
    }
  },
  "paymentProcessing": {
    "enabled": true,
    "interval": 600,
    "shareRecoveryFile": "recovered-shares.txt"
  },
  "api": {
    "enabled": true,
    "listenAddress": "0.0.0.0",
    "port": 3052,
    "metricsIpWhitelist": ["127.0.0.1", "::1"]
  },
  "pools": [
    {
      "id": "btc-pool",
      "enabled": true,
      "coin": "bitcoin",
      "address": "bc1replacewithrealpayoutaddress",
      "rewardRecipients": [
        {
          "address": "bc1replacewithrealpayoutaddress",
          "percentage": 1.0
        }
      ],
      "jobRebroadcastTimeout": 10,
      "blockRefreshInterval": 1000,
      "clientConnectionTimeout": 600,
      "banning": {
        "enabled": true,
        "time": 600,
        "invalidPercent": 50,
        "checkThreshold": 50
      },
      "ports": {
        "3333": {
          "listenAddress": "0.0.0.0",
          "difficulty": 16384,
          "varDiff": {
            "minDiff": 1024,
            "maxDiff": 65536,
            "targetTime": 15,
            "retargetTime": 90,
            "variancePercent": 30
          },
          "tls": false
        }
      },
      "daemons": [
        {
          "host": "161.97.137.172",
          "port": 8332,
          "user": "bitcoinrpc",
          "password": "replace-with-rpc-password"
        }
      ],
      "paymentProcessing": {
        "enabled": true,
        "minimumPayment": 0.001,
        "payoutScheme": "PPLNS",
        "payoutSchemeConfig": {
          "factor": 2.0
        }
      }
    },
    {
      "id": "btc-solo",
      "enabled": true,
      "coin": "bitcoin",
      "address": "bc1replacewithrealpayoutaddress",
      "rewardRecipients": [],
      "jobRebroadcastTimeout": 10,
      "blockRefreshInterval": 1000,
      "clientConnectionTimeout": 600,
      "ports": {
        "3334": {
          "listenAddress": "0.0.0.0",
          "difficulty": 131072,
          "tls": false
        }
      },
      "daemons": [
        {
          "host": "161.97.137.172",
          "port": 8332,
          "user": "bitcoinrpc",
          "password": "replace-with-rpc-password"
        }
      ],
      "paymentProcessing": {
        "enabled": false
      }
    }
  ]
}
